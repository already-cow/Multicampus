package java_study.chapter04;

import java.util.Random;
import java.util.Scanner;

// 0:가위 1:바위 2:보 게임
public class Game1 {
	public static void main(String[] args) {
		final int SCISSORS = 0;
		final int ROCK = 1;
		final int PAPER = 2;
		final int EXIT = -2;

		Random r = new Random();
		Scanner sc = new Scanner(System.in);

		while (true) {
			int computer = r.nextInt(3); // 3은 미포함
			System.out.print("0:가위 1:바위 2:보 -1:종료 >> ");
			int me = sc.nextInt();

			// 종료 조건 확인 후 진행
			if (me == EXIT) { // 종료 조건
				break;
			}

			System.out.printf("컴퓨터 : %d, 나 : %d\n", computer, me);

			if (me == computer) { // 비긴 것
				System.out.println("비겼습니다.");
			} else if ((me == SCISSORS && computer == PAPER) || (me == ROCK && computer == SCISSORS)
					|| (me == PAPER && computer == ROCK)) {
				System.out.println("내가 이겼습니다.");
				// 내가 이긴 경우
			} else { // 내가 진 경우
				System.out.println("내가 졌습니다.");
			}
		}
	}
}